<h1> <%= link_to 'Foodstagram', root_path %> </h1>
<h2>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<%= button_to "New Post", new_post_path, :class => "btn btn-primary", :method => :get if @user == current_user %>

<h2> <%= "Posts" if Post.where(user_id:@user.id).length > 0 %> </h3>
    <% Post.where(user_id:@user.id).reverse.each do |p| %>
    <div>
        <h3> <%= p.title %> </h3>
        <p>
            <% if Time.now.to_date == p.created_at.to_date %>
                <% if (Time.now.to_i - p.created_at.to_i) / 60 < 60 %>
                    <% if (Time.now.to_i - p.created_at.to_i) / 60 == 1 %>
                        <p> Posted 1 minute ago</p>
                    <% else %>                    
                        <p> Posted <%= (Time.now.to_i - p.created_at.to_i) / 60 %> minutes ago</p>
                    <% end %>
                <% else %>
                    <% if (Time.now.to_i - p.created_at.to_i) / 3600 == 1 %>
                        <p> Posted 1 hour ago</p>
                    <% else %>                    
                        <p> Posted <%= (Time.now.to_i - p.created_at.to_i) / 3600 %> minutes ago</p>
                    <% end %>                        
                <% end %>
            <% else %>
                <p> Posted on <%= p.created_at.strftime("%b %d, %Y") %></p>
            <% end %>
            <%= image_tag p.avatar.url(:large) %>
        </p>
        <p><%= p.caption %></p>
    </div>
<% end %>
